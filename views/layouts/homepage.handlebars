<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" 
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" 
    crossorigin="anonymous">
  <title>MS Tech Blog</title>
</head>

<body>

  <!-- header with navigation -->
  <header class="mb-3">
    <nav class="navbar navbar-expand-lg bg-secondary">
      <div class="container-fluid  justify-content-center">
        <div class="navbar-brand text-white mb-0 fs-2 fw-bold">MS Tech Blog</div>
      </div>
    </nav>
    <div class="d-flex flex-row">
      <a class="nav-link" href="/">Home</a><span class="nav-link">|</span> 
      <a class="nav-link" href="/dashboard">Dashboard</a><span class="nav-link">|</span>

      <!-- render links based on login status -->
      {{#if logged_in}}
          <a class="nav-link" id="logout">Logout</a>
      {{else}}
          <a class="nav-link" href="/login">Login</a>
      {{/if}} 
      </ul>    
    </div>
  </header>

  <!-- main -->
  <main class="mb-3">
    <div class="container">
      <div class="row row-cols-1 g-2 align-item-center justify-content-center">

        <!-- render sublayout -->
        {{{ body }}}

      </div>
    </div>
  </main>

  <!-- if the user is logged in, render logout script -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <footer>
    <hr>
  </footer>
</body>
</html>