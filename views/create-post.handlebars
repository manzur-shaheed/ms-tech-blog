<!-- create-post -->
<div class="col">
  <div class="card m-2">
    <div class="card-header bg-light">
      <div class="fs-3 fw-bold">Create Post</div>
    </div>
    <div class="card-body">
      <form class="form post-form">
        <div class="form-group mb-3">
          <label for="create-post-title" class="form-label fw-bold">Title</label>
          <textarea class="form-control" id="create-post-title" rows="1"></textarea>
        </div>
        <div class="form-group mb-3">
          <label for="create-post-content" class="form-label fw-bold">Content</label>
          <textarea class="form-control" id="create-post-content" rows="5"></textarea>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="create-post-btn">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/create-post.js"></script>