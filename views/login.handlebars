<!-- login handlebar -->
<div class="col">
  <div class="card m-2">
    <div class="card-header bg-light">
      <div class="fs-3 fw-bold">Login</div>
    </div>
    <div class="card-body">
      <form class="form login-form">
        <div class="form-group mb-3">
          <label for="username" class="form-label fw-bold">Username</label>
          <input class="form-control" type="text" id="login-username"></input>
        </div>
        <div class="form-group mb-3">
          <label for="password" class="form-label fw-bold">Password</label>
          <input class="form-control" type="password" id="login-password"></input>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="login-btn">Login</button>
          <a class="btn btn-primary" href="/signup">Sign Up</a>
        </div>
      </form>        
    </div>
  </div>
</div>

<script src="/js/login.js"></script>