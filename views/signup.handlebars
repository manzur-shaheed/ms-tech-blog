<!-- signup handlebar-->
<div class="col">
  <div class="card m-2">
    <div class="card-header bg-light">
      <div class="fs-3 fw-bold">Sign Up</div>
    </div>
    <div class="card-body">
      <form class="form signup-form">
        <div class="form-group mb-3">
          <label for="username-sign-up" class="form-label fw-bold">Username</label>
          <input class="form-control" type="text" id="signup-username"></input>
        </div>
        <div class="form-group mb-3">
          <label for="password-sign-up" class="form-label fw-bold">Password</label>
          <input class="form-control" type="password" id="signup-password"></input>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="signup-btn">Sign Up</button>
          <a class="btn btn-primary" href="/login">Login</a>
        </div>
      </form>
      <div>

      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>